{{#if isLoginTemplate}}
<div class="container-fluid d-flex flex-column justify-content-center align-items-center px-5 py-5 bg-light" id="contactUs">
    <div class="mb-3 align-item-center">
        <h2 class="text-center mb-3">Login</h2>
        <p class="text-center">Don't have a profile yet? <a href="/api/users/create">Create one</a></p>
    </div>

    <form method="POST" class="d-flex flex-column w-50" id="loginForm">
        <div class="form-group">
            <label class="mb-1" for="username">Username</label>
            <input type="email" class="form-control" id="username" aria-describedby="usernameHelp" placeholder="Enter your username" required>
            <small id="usernameHelp" class="form-text text-muted mt-1">Your username should be your personal email address.</small>
        </div>
        
        <div class="form-group mt-4 mb-3">
            <label class="mb-1" for="password">Password</label>
            <input type="text" class="form-control" id="password" aria-describedby="passwordHelp" placeholder="Enter your password" required>
        </div>
        <a href="/api/users/forgot">Forgot Password?</a>
        <div class="d-flex flex-row-reverse mt-3">
            <button id="formSubmit" type="submit" class="btn btn-primary buttonStyle" style="background-color: #5e6d55; border-color: #5e6d55;">Submit</button>
        </div>
    </form>
</div>
{{/if}}

